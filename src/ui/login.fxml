<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="loginPaneOrsmnt" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #5c524f;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Nombre de Usuario:" />
                  <TextField fx:id="userNameLoginTF" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Contraseña:             " />
                  <PasswordField fx:id="passwordLoginPF" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="loginBTN" mnemonicParsing="false" onAction="#loginPressed" text="Iniciar Sesión" />
                  <Button fx:id="registerBTN" mnemonicParsing="false" onAction="#registerPressed" text="Registrarse" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label fx:id="currentUser" alignment="CENTER_RIGHT" contentDisplay="CENTER" styleClass="#enabled-label" text="Por favor iniciar sesión" textAlignment="JUSTIFY" BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets right="15.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
