<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="709.0" style="-fx-background-color: #675E5B;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="productTBV" editable="true" prefHeight="450.0" prefWidth="570.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="nameCol" minWidth="-Infinity" onEditCommit="#editName" prefWidth="85.0" text="Producto" />
                <TableColumn fx:id="enabledCol" minWidth="-Infinity" onEditCommit="#editEnabled" prefWidth="93.0" text="Habilitado" />
                  <TableColumn fx:id="ingredientsCol" minWidth="-Infinity" onEditCommit="#editIngredient" prefWidth="85.0" text="Ingredientes" />
                  <TableColumn fx:id="typeCol" minWidth="-Infinity" onEditCommit="#editType" prefWidth="93.0" text="Tipo de PLato" />
                  <TableColumn fx:id="sizesCol" minWidth="-Infinity" onEditCommit="#editSizes" prefWidth="117.0" text="Tamaños" />
                  <TableColumn fx:id="pricesCol" minWidth="-Infinity" onEditCommit="#editPrices" prefWidth="117.0" text="Precios" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <VBox alignment="CENTER" maxWidth="-Infinity" prefHeight="450.0" prefWidth="203.0" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" text="Importar" />
                  <Button mnemonicParsing="false" text="Exportar" />
                  <Label fx:id="spacer2" prefHeight="65.0" prefWidth="0.0" />
                  <Button mnemonicParsing="false" onAction="#addProductCLicked" text="Agregar" />
                  <Button mnemonicParsing="false" text="Eliminar" />
                  <Label fx:id="spacer3" />
                  <Label prefHeight="42.0" prefWidth="137.0" text="Editado por última vez por:" wrapText="true" />
                  <Label fx:id="lastUserLBL" text="root" />
               </children></VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
